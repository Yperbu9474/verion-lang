# Conditional Example

write "=== Conditional Example ==="

set total to 15

if total is greater than 10:
    write "Big number!"
else:
    write "Small number"
end

set age to 25

if age is greater than 18:
    write "Adult"
end

set score to 85

if score is greater than 90:
    write "Grade: A"
else:
    write "Grade: B or lower"
end
